<?xml version="1.0" encoding="UTF-8"?>
<ResourceDictionary  xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ToDoApp.Styles.Colors">
    <Color x:Key="PrimaryColor">#233E8B</Color>
    <Color x:Key="PrimaryDarkColor">#0E1837</Color>
    <Color x:Key="AccentColor">#feb92f</Color>

    <Color x:Key="FailColor">#D04C41</Color>
    <Color x:Key="SuccessColor">#00AF49</Color>

    <!--App Theme Light-->
    <Color x:Key="LightPrimaryTextColor">#0E1837</Color>
    <Color x:Key="LightSecondaryTextColor">#7B769D</Color>

    <Color x:Key="LightPageBackgroundColor">#F7F7FC</Color>
    <Color x:Key="LightCardBackgroundColor">#FFF</Color>
    <Color x:Key="LightCardUnselectedBackgroundColor">#F1F0F7</Color>
    <Color x:Key="LightCardBorderColor">#D2D1DE</Color>

    <Color x:Key="LightTransparentBackgroundColor">#99F7F7FC</Color>

    <!--App Theme Dark-->

    <Color x:Key="DarkSecondaryTextColor">#B2B8C1</Color>

    <Color x:Key="DarkPageBackgroundColor">#0E1837</Color>
    <Color x:Key="DarkCardBackgroundColor">#192C46</Color>
    <Color x:Key="DarkCardUnselectedBackgroundColor">#000E23</Color>

<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ToDoApp.Views.AddPage"
             NavigationPage.HasNavigationBar="False">
    <ContentPage.Content>
        <StackLayout>
            <Label
                Margin="16, 16, 0, 0"
                Style="{StaticResource Headline4_CairoBold}"
                Text="{Binding Type, StringFormat='Add new {0}'}"
                TextColor="#333"/>
            <Grid
                ColumnDefinitions="*, *"
                Padding="16, 0, 16, 0">
                <Button
                    Grid.Column="0"
                    Text="Task"
                    TextTransform="None"
                    CornerRadius="16"
                    Margin="0, 0, 4, 0"></Button>
                <Button
                    Grid.Column="1"
                    Text="List"
                    TextTransform="None"
                    CornerRadius="16"
                    Margin="4, 0, 0, 0"></Button>
            </Grid>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:sho="http://sharpnado.com"
             xmlns:viewModels="clr-namespace:ToDoApp.ViewModels"
             x:Class="ToDoApp.Views.WelcomePage"
             NavigationPage.HasNavigationBar="False">
    <ContentPage.BindingContext>
        <viewModels:WelcomePageViewModel />
    </ContentPage.BindingContext>
    <ContentPage.Content>
        <Grid
            RowDefinitions="Auto, *">
            <Label
                Grid.Row="0"
                Text="Today"
                FontSize="24"
                FontFamily="CairoBold"
                Margin="16, 0, 0, 0"></Label>
            <sho:HorizontalListView
                Grid.Row="1"
                ItemHeight="50"
                ListLayout="Vertical"
                CollectionPadding="16, 0, 16, 0"
                ItemSpacing="8"
                ItemsSource="{Binding TaskList}"
                CurrentIndex="0"
                EnableDragAndDrop="True"
                iOSDragAndDropOnPanGesture="True">
                <sho:HorizontalListView.ItemTemplate>
                    <DataTemplate>
                        <sho:DraggableViewCell 
                            x:Name="DraggableViewCell">
                            <ContentView
                                BackgroundColor="#f5f5f5">
                                <StackLayout
                                    Orientation="Horizontal">
                                    <Label
                                        Text="&#xf111;"
                                        FontSize="24"
                                        FontFamily="FontAwesome"
                                        TextColor="#cacaca"
                                        HorizontalOptions="Start"
                                        VerticalOptions="Center"
                                        Margin="16, 0, 0, 0"></Label>
                                    <Label 
                                        Text="{Binding .}"
                                        FontFamily="CairoRegular"
                                        Margin="8, 0, 8, 0"
                                        VerticalOptions="Center"></Label>
                                </StackLayout>
                            </ContentView>
                        </sho:DraggableViewCell>
                    </DataTemplate>
                </sho:HorizontalListView.ItemTemplate>
            </sho:HorizontalListView>
        </Grid>
    </ContentPage.Content>
</ContentPage>
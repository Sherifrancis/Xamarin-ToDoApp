<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:xct="http://xamarin.com/schemas/2020/toolkit"
             x:Class="ToDoApp.Views.WelcomePage"
             NavigationPage.HasNavigationBar="False">
    <ContentPage.Content>
        <Grid
            BackgroundColor="{StaticResource PrimaryDarkColor}"
            RowDefinitions="*, Auto, Auto, Auto, Auto">
            <Frame
                Grid.Row="1"
                BackgroundColor="White"
                CornerRadius="32"
                Margin="16, 0">
                <StackLayout
                    Spacing="0">
                    <Label
                        Text="Name"
                        FontFamily="Cairo_Regular"
                        FontSize="{StaticResource CaptionFontSize}"></Label>
                    <Entry
                        FontFamily="Cairo_Regular"
                        ReturnCommand="{Binding StartCommand}"
                        Text="{Binding Email}">
                        <Entry.Effects>
                            <xct:RemoveBorderEffect></xct:RemoveBorderEffect>
                        </Entry.Effects>
                    </Entry>
                </StackLayout>
            </Frame>
            <Frame
                Grid.Row="2"
                BackgroundColor="White"
                CornerRadius="32"
                Margin="16, 0">
                <StackLayout
                    Spacing="0">
                    <Label
                        Text="Name"
                        FontFamily="Cairo_Regular"
                        FontSize="{StaticResource CaptionFontSize}"></Label>
                    <Entry
                        FontFamily="Cairo_Regular"
                        ReturnCommand="{Binding StartCommand}"
                        Text="{Binding Password}">
                        <Entry.Effects>
                            <xct:RemoveBorderEffect></xct:RemoveBorderEffect>
                        </Entry.Effects>
                    </Entry>
                </StackLayout>
            </Frame>
            <Button 
                Grid.Row="3"
                BackgroundColor="{StaticResource AccentColor}"
                Command="{Binding LoginCommand}"
                CornerRadius="32"
                FontSize="{StaticResource ButtonFontSize}"
                FontFamily="Cairo_Bold"
                Margin="32, 16"
                Padding="24, 16, 24, 16"
                Text="Login"
                TextColor="#253864"></Button>
            <Button 
                Grid.Row="4"
                BackgroundColor="{StaticResource AccentColor}"
                Command="{Binding RegisterCommand}"
                CornerRadius="32"
                FontSize="{StaticResource ButtonFontSize}"
                FontFamily="Cairo_Bold"
                Margin="32, 16"
                Padding="24, 16, 24, 16"
                Text="Register"
                TextColor="#253864"></Button>
        </Grid>
    </ContentPage.Content>
</ContentPage>
<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:sho="http://sharpnado.com"
             xmlns:viewModels="clr-namespace:ToDoApp.ViewModels"
             x:Class="ToDoApp.Views.WelcomePage"
             NavigationPage.HasNavigationBar="False">
    <ContentPage.BindingContext>
        <viewModels:WelcomePageViewModel />
    </ContentPage.BindingContext>
    <ContentPage.Content>
        <Grid>
            <sho:HorizontalListView
                ItemHeight="50"
                ListLayout="Vertical"
                CollectionPadding="16"
                ItemSpacing="8"
                ItemsSource="{Binding TaskList}"
                CurrentIndex="0"
                EnableDragAndDrop="True"
                iOSDragAndDropOnPanGesture="True"
                TapCommand="{Binding TapCommand}">
                <sho:HorizontalListView.ItemTemplate>
                    <DataTemplate>
                        <sho:DraggableViewCell 
                            x:Name="DraggableViewCell">
                            <ContentView
                                BackgroundColor="#cacaca">
                                <StackLayout
                                    Orientation="Horizontal">
                                    <Ellipse
                                        Stroke="Red"
                                        StrokeThickness="4"
                                        WidthRequest="25"
                                        HeightRequest="25"
                                        Aspect="Uniform"
                                        Margin="16, 0, 0, 0"></Ellipse>
                                    <Label 
                                        Text="{Binding .}"
                                        Margin="8, 0, 8, 0"
                                        VerticalOptions="Center"></Label>
                                </StackLayout>
                            </ContentView>
                        </sho:DraggableViewCell>
                    </DataTemplate>
                </sho:HorizontalListView.ItemTemplate>
            </sho:HorizontalListView>
        </Grid>
    </ContentPage.Content>
</ContentPage>
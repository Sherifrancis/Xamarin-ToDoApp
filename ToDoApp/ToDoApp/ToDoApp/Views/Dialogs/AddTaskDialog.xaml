<?xml version="1.0" encoding="UTF-8"?>
<Frame xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ToDoApp.Views.Dialogs.AddTaskDialog"
             xmlns:prism="http://prismlibrary.com"
             prism:ViewModelLocator.AutowireViewModel="True"
             prism:DialogLayout.CloseOnBackgroundTapped="True"
             prism:DialogLayout.RelativeWidthRequest="1"
             prism:DialogLayout.RelativeHeightRequest="1"
             BackgroundColor="White"
             VerticalOptions="End">
    <prism:DialogLayout.Mask>
        <StackLayout BackgroundColor="{StaticResource LightTransparentBackgroundColor}"
                     HorizontalOptions="FillAndExpand"
                     VerticalOptions="FillAndExpand"></StackLayout>
    </prism:DialogLayout.Mask>
    <StackLayout>
        <Label Text="Add new task"
               TextColor="Black"
               FontSize="{StaticResource Headline4FontSize}"/>
        <Button 
            Text="Close"
            FontFamily="Cairo_Regular"
            FontSize="{StaticResource ButtonFontSize}"
            Padding="8, 0, 8, 0"
            Command="{Binding CloseCommand}"
            CornerRadius="36"/>
    </StackLayout>
</Frame>